include models/resources.pug

<!DOCTYPE html>
html#fmp(lang=lang.iso639)
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="theme-color", content="rgb(255, 196, 129)")
		meta(name="robots", content="noindex")

		script(src=`/lang/${lang.iso639}.js` type='text/javascript' defer)
		script(src="/scripts/app.js")
		script(src="/scripts/integrity.js", type="module")
		script(src='/scripts/settings.js' defer)

		link(rel="preconnect", href="https://fonts.gstatic.com")
		link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap")
		link(rel="stylesheet", href="/styles/reset.css")
		link(rel="stylesheet", href="/styles/basics.css")
		link(rel="stylesheet", href="/styles/settings.css")
		link(rel="stylesheet", href="/icons/icons.css")

		link(rel="icon" type="image/png" href="/img/logos/fmp_logo-512.png")
		link(rel="manifest", href="/manifest.webmanifest")

		title FoundMyPet
	body
		+header(lang.dictionary.config)
		div#body
			div#regional
				h3= lang.dictionary.regional
				.custom-select
					label(for="languageselect")= lang.dictionary.language
					select#languageselect
						option(value=lang.iso639)= lang.dictionary.this
						option(value="es-ES") Espa√±ol
						option(value="en-US") English
						option(value="eo") Esperanto
			div#app
				h3= lang.dictionary.app
				
		+footer()